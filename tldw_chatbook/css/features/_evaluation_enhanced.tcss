/* ========================================
 * FEATURES: Enhanced Evaluation System
 * ======================================== 
 * Modern, professional styling for the evaluation system
 * Follows Textual CSS best practices
 * ======================================== */

/* --- CSS Variables for Evaluation Theme --- */
$eval-primary: dodgerblue;
$eval-success: springgreen;
$eval-warning: gold;
$eval-error: crimson;
$eval-panel-bg: $background 5%;
$eval-card-bg: $background 10%;
$eval-hover-bg: $background 15%;
$eval-border: $primary 30%;
$eval-text-muted: $text 70%;
$eval-accent: $accent;

/* --- Layout Structure --- */
#evals-window {
    layout: horizontal;
    height: 100%;
    width: 100%;
}

/* --- Navigation Sidebar --- */
.evals-nav-pane {
    width: 20%;
    min-width: 20;
    max-width: 30;
    background: $eval-panel-bg;
    padding: 1 1;
    border-right: thick $eval-border;
    
    &.collapsed {
        width: 0;
        min-width: 0;
        display: none;
    }
}

.sidebar-title {
    text-style: bold;
    color: $eval-primary;
    margin-bottom: 1;
    text-align: center;
    border-bottom: heavy $eval-border;
    padding-bottom: 1;
}

/* Navigation Buttons with Modern Styling */
.evals-nav-button {
    width: 100%;
    height: 3;
    margin-bottom: 1;
    text-align: left;
    background: transparent;
    color: $eval-text-muted;
    border: none;
    padding: 0 1;
    
    &:hover {
        background: $eval-hover-bg;
        color: $text;
        border-left: thick $eval-primary;
    }
    
    &.active {
        background: $eval-accent 20%;
        color: $text;
        text-style: bold;
        border-left: thick $eval-primary;
    }
}

/* --- Content Area --- */
.evals-content-pane {
    layout: vertical;
    height: 100%;
    width: 1fr;
    padding: 1;
    background: $background;
}

/* Sidebar Toggle Button */
.sidebar-toggle {
    width: 3;
    height: 3;
    background: $eval-card-bg;
    border: heavy $eval-border;
    margin: 0 1 1 0;
    
    &:hover {
        background: $eval-hover-bg;
        border: heavy $eval-primary;
    }
    
    &.collapsed {
        margin-left: 0;
    }
}

/* --- View Areas --- */
.evals-view-area {
    height: 100%;
    width: 100%;
    padding: 1;
    display: none;
}

/* --- Section Containers with Card Design --- */
.section-container {
    background: $eval-card-bg;
    padding: 2;
    margin-bottom: 2;
    border: heavy $eval-border;
    
    &.hidden {
        display: none;
    }
}

.section-title {
    text-style: bold;
    margin-bottom: 1;
    color: $eval-primary;
    text-align: center;
    border-bottom: dashed $eval-border;
    padding-bottom: 1;
}

/* --- Grid Layouts --- */
.quick-setup-grid {
    layout: grid;
    grid-size: 2;
    grid-gutter: 1 2;
    margin-bottom: 2;
    
    Label {
        text-align: right;
        color: $eval-text-muted;
        padding-top: 1;
    }
}

/* --- Form Elements --- */
.config-select {
    width: 100%;
    background: $eval-panel-bg;
    border: tall $eval-border;
    
    &:hover {
        border: tall $eval-primary;
    }
    
    &:focus {
        border: tall $eval-accent;
    }
    
    &:disabled {
        opacity: 0.5;
        color: $eval-text-muted;
    }
}

.search-input {
    width: 100%;
    margin-bottom: 1;
    background: $eval-panel-bg;
    border: tall $eval-border;
    
    &:focus {
        border: tall $eval-accent;
    }
}

/* --- Buttons with Modern Design --- */
.action-button {
    height: 3;
    margin: 0 1 1 0;
    min-width: 15;
    background: $eval-card-bg;
    border: tall $eval-border;
    
    &:hover {
        background: $eval-hover-bg;
        border: tall $eval-primary;
    }
    
    &.primary {
        background: $eval-primary;
        color: white;
        text-style: bold;
        
        &:hover {
            background: $eval-primary 80%;
        }
        
        &:disabled {
            background: $eval-primary 30%;
            color: $eval-text-muted;
        }
    }
    
    &.danger {
        background: $eval-error;
        color: white;
        
        &:hover {
            background: $eval-error 80%;
        }
    }
}

/* --- Progress Tracking --- */
#progress-container {
    &.hidden {
        display: none;
    }
}

.progress-bar {
    bar-completed-color: $eval-success;
    bar-background-color: $eval-panel-bg;
    bar-color: $eval-primary;
}

/* --- Data Tables --- */
.data-table {
    width: 100%;
    height: 15;
    background: $eval-panel-bg;
    border: tall $eval-border;
    
    &:focus {
        border: tall $eval-accent;
    }
}

/* --- Layout for Different Views --- */
.results-layout, .models-layout, .datasets-layout {
    layout: horizontal;
    height: 100%;
    width: 100%;
    gap: 1;
}

/* --- Panel Styling --- */
.results-history-pane, .provider-panel, .dataset-list-panel {
    width: 35%;
    min-width: 25;
    background: $eval-panel-bg;
    padding: 1;
    border: tall $eval-border;
    height: 100%;
}

.results-details-pane, .model-panel, .dataset-details-panel {
    width: 65%;
    padding: 1;
    height: 100%;
    background: $eval-card-bg;
    border: tall $eval-border;
}

.pane-title {
    text-style: bold;
    color: $eval-primary;
    margin-bottom: 1;
    text-align: center;
    border-bottom: dashed $eval-border;
    padding-bottom: 1;
}

/* --- Lists --- */
.provider-list, .dataset-list, .run-list {
    background: $eval-panel-bg;
    border: tall $eval-border;
    min-height: 10;
    max-height: 30;
    
    ListItem {
        padding: 1;
        
        &:hover {
            background: $eval-hover-bg;
        }
        
        &.-selected {
            background: $eval-accent 30%;
        }
    }
}

/* --- Info Grids --- */
.info-grid {
    layout: grid;
    grid-size: 2;
    grid-gutter: 1 2;
    
    Label {
        text-align: right;
        color: $eval-text-muted;
    }
    
    Static {
        color: $text;
        background: $eval-panel-bg;
        padding: 0 1;
        border: tall $eval-border;
    }
}

/* --- Metrics Display --- */
.metrics-grid {
    layout: grid;
    grid-size: 3;
    grid-gutter: 1;
    margin: 1 0;
}

.metric-card {
    background: $eval-card-bg;
    padding: 1;
    border: tall $eval-border;
    text-align: center;
    height: 6;
    
    &:hover {
        background: $eval-hover-bg;
        border: tall $eval-primary;
    }
    
    .metric-name {
        color: $eval-text-muted;
        margin-bottom: 1;
    }
    
    .metric-value {
        color: $eval-primary;
        text-style: bold;
    }
}

/* --- Preview Areas --- */
.preview-area {
    background: $background;
    padding: 1;
    border: tall $eval-border;
    min-height: 10;
    max-height: 20;
    overflow-y: auto;
    
    &:focus {
        border: tall $eval-accent;
    }
}

/* --- Status Bar --- */
.eval-status-bar {
    background: $eval-panel-bg;
    padding: 0 2;
    border-top: thick $eval-border;
    dock: bottom;
    height: 3;
    width: 100%;
    
    Horizontal {
        height: 100%;
        align: left middle;
    }
    
    .status-label {
        color: $eval-text-muted;
        margin-right: 1;
    }
    
    .status-value {
        color: $text;
        margin-right: 3;
        
        &.running {
            color: $eval-warning;
            text-style: bold;
        }
    }
}

/* --- Cost Estimation Widget --- */
.cost-estimation-widget {
    .cost-display {
        layout: grid;
        grid-size: 2;
        grid-gutter: 1;
        margin: 1 0;
        
        Label {
            text-align: right;
            color: $eval-text-muted;
        }
        
        .cost-value {
            color: $eval-success;
            text-style: bold;
            
            &.warning {
                color: $eval-warning;
            }
            
            &.danger {
                color: $eval-error;
            }
        }
    }
}

/* --- Progress Tracker Widget --- */
.progress-tracker {
    .progress-header {
        layout: horizontal;
        margin-bottom: 1;
        
        .progress-title {
            width: 1fr;
            text-style: bold;
            color: $eval-primary;
        }
        
        .progress-percentage {
            color: $eval-accent;
            text-style: bold;
        }
    }
    
    .progress-bar {
        margin: 1 0;
    }
    
    .progress-details {
        layout: horizontal;
        margin: 1 0;
        
        Static {
            width: 1fr;
            text-align: center;
            color: $eval-text-muted;
        }
    }
}

/* --- Placeholder Text --- */
.placeholder-text {
    color: $eval-text-muted;
    text-style: italic;
    text-align: center;
    padding: 2;
}

/* --- Filter Controls --- */
.filter-container {
    margin-bottom: 2;
    
    .filter-select {
        width: 100%;
        margin-top: 1;
        background: $eval-panel-bg;
        border: tall $eval-border;
    }
}

/* --- Model Grid --- */
.model-grid {
    layout: grid;
    grid-size: 3;
    grid-gutter: 2;
    margin: 2 0;
}

/* --- Button Rows --- */
.button-row {
    layout: horizontal;
    height: auto;
    margin: 1 0;
    
    Button {
        margin-right: 1;
    }
}

/* --- History Actions --- */
.history-actions, .dataset-actions {
    layout: horizontal;
    margin-top: 2;
    padding-top: 1;
    border-top: dashed $eval-border;
    
    Button {
        width: 1fr;
        margin: 0 1 0 0;
    }
}

/* --- Subsection Titles --- */
.subsection-title {
    text-style: bold;
    margin: 1 0;
    color: $eval-accent;
    border-bottom: dashed $eval-border;
    padding-bottom: 1;
}

/* --- Hidden State --- */
.hidden {
    display: none;
}

/* --- Animations --- */
@keyframes pulse {
    0% { background: $eval-card-bg; }
    50% { background: $eval-hover-bg; }
    100% { background: $eval-card-bg; }
}

/* --- Responsive Adjustments --- */
@media (max-width: 100) {
    .evals-nav-pane {
        width: 15%;
        min-width: 15;
    }
    
    .results-layout, .models-layout, .datasets-layout {
        layout: vertical;
    }
    
    .results-history-pane, .provider-panel, .dataset-list-panel,
    .results-details-pane, .model-panel, .dataset-details-panel {
        width: 100%;
        height: 50%;
    }
}