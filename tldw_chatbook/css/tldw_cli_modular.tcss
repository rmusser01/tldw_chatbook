    width: 100%;
}

#dialog-buttons {
    layout: horizontal;
    align: center middle;
    width: 100%;
    margin-top: 1;
}

#dialog-buttons Button {
    margin: 0 1;
    min-width: 10;
}

/* Modal screen background */
ModalScreen {
