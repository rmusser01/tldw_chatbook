/* ===== MODULE: features/_splash.tcss ===== */
/* Splash Screen Styles */

/* Main splash screen container */
SplashScreen, .splash-screen {
    layer: overlay;
    background: $background;
    width: 100%;
    height: 100%;
    align: center middle;
    dock: top;
}

/* Center container for splash content */
#splash-center {
    width: 100%;
    height: 100%;
    align: center middle;
}

/* Content container */
#splash-content {
    width: 100%;
    height: 100%;
    align: center middle;
    padding: 0;
}

/* Main splash display area */
#splash-main, .splash-main {
    width: 100%;
    height: 100%;
    content-align: center middle;
    text-align: center;
    margin: 0;
}

/* Splash display widget - the actual content display area */
#splash-display, .splash-display {
    width: 100%;
    height: 100%;
    content-align: center middle;
    text-align: center;
    align: center middle;
    padding: 0;
    margin: 0;
}

/* Progress text */
#splash-progress-text, .splash-progress-text {
    width: 100%;
    text-align: center;
    color: $text-muted;
    margin-bottom: 1;
}

/* Progress bar styling */
#splash-progress-bar, .splash-progress-bar {
    width: 80%;
    max-width: 100;
    height: 1;
    margin: 0 0 0 0;
    align: center middle;
}

#splash-progress-bar Bar {
    color: $success;
}

#splash-progress-bar PercentageStatus {
    text-style: dim;
}

/* Animation-specific styles */

/* Matrix rain effect */
.matrix-rain {
    color: $success;
    text-style: bold;
}

/* Glitch effect */
.glitch-effect {
    color: $text;
    text-style: bold;
}

.glitch-effect-error {
    color: $error;
    text-style: bold;
}

.glitch-effect-primary {
    color: $primary;
    text-style: bold;
}

.glitch-effect-warning {
    color: $warning;
    text-style: bold;
}

.glitch-effect-success {
