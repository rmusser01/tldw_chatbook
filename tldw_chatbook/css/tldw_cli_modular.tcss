}

.collection-select-checkbox {
    margin-right: 1;
}

.collection-icon {

    margin-right: 1;
    min-width: 3;
    text-align: center;
}

.collection-info-container {
    width: 1fr;
}

.collection-name {
    text-style: bold;
    margin-bottom: 0;
}

.collection-metadata-row {
