    margin-top: 0;
    margin-bottom: 1;
    padding: 0 1;
    text-style: italic;
}

.error-message.hidden {
    display: none;
}

/* General error at bottom */
.error-general {
    text-align: center;
    background: $error 20%;
    border: round $error;
    padding: 1;
    margin: 1 2;

    text-style: bold;
}

/* Input error state */
.embeddings-form-control.error {
    border: thick $error;
}

.embeddings-form-control Input.error,
.embeddings-form-control Select.error {
    border: thick $error;
}

/* ========================================
